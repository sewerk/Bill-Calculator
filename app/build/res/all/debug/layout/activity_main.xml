<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/button_bill_type_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bill_type_switch"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/textView_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_bill_type_switch"
        android:layout_centerHorizontal="true"
        android:text="Zmień typ rachunku klikając logo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

<!-- WSKAZANIA ============================-->
    <EditText
        android:id="@+id/editText_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView_tip"
        android:layout_below="@+id/textView_tip"
        android:layout_marginTop="48dp"
        android:ems="5"
        android:gravity="right"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editText_from"
        android:layout_below="@id/editText_from"
        android:ems="5"
        android:gravity="right"
        android:inputType="number">

    </EditText>

    <TextView
        android:id="@+id/textView_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editText_from"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/editText_from"
        android:text="@string/previous_reading"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editText_to"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/editText_to"
        android:text="@string/current_reading"
        android:textAppearance="?android:attr/textAppearanceMedium" />
<!-- DATA ============================-->
    <Button
        android:id="@+id/button_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_to"
        android:layout_alignRight="@id/editText_to"
        android:layout_marginTop="8dp"
        android:text=" Do "/>

    <TextView
        android:id="@+id/textView_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_to"
        android:layout_alignBaseline="@id/button_to"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" - "/>

    <Button
        android:id="@+id/button_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textView_from_to"
        android:layout_alignBottom="@id/button_to"
        android:text=" Od "/>

    <TextView
        android:id="@+id/textView_za_okres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_from"
        android:layout_alignBaseline="@id/button_to"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Za okres: "/>

<!-- OBLICZ =========================== -->
    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText_to"
        android:layout_below="@+id/button_to"
        android:layout_marginTop="24dp"
        android:text="@string/calculate" />

</RelativeLayout><!-- From: file:/home/kseweryn/android-studio-workspace/BillCalculator/app/src/main/res/layout/activity_main.xml -->