<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/form_entry">

    <TableRow android:layout_marginTop="@dimen/small_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FormHeader"
            android:layout_span="4"
            android:text="@string/form_for_period" />
    </TableRow>

    <TableRow android:gravity="center">

        <com.wnafee.vector.MorphButton
            style="@style/FormReadingIcon"
            app:vc_startDrawable="@drawable/ic_today_black_24px" />

        <pl.srw.billcalculator.form.view.DatePickingView
            android:id="@+id/button_date_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            tools:text="11/12/2014"
            app:errorView="@+id/date_to_error"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:text="-"
            android:textSize="16sp" />

        <pl.srw.billcalculator.form.view.DatePickingView
            android:id="@+id/button_date_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            tools:text="11/12/2014"
            app:errorView="@+id/date_to_error"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/date_to_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.Design.Error"
            tools:text="@string/date_error"/>
    </TableRow>
</merge>