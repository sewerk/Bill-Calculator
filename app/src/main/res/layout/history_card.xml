<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/cardview_elevation"
    android:layout_margin="@dimen/cardview_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/small_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_for_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            tools:text="01/06/2014 - 30/12/2014"/>

        <ImageView
            android:id="@+id/iv_bill_type"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center"
            tools:src="@drawable/pge_small"
            android:contentDescription="Provider logo"/>

        <include
            layout="@layout/history_card_readings" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/smallest_padding"
                android:paddingRight="@dimen/smallest_padding"
                android:singleLine="true"
                android:text="@string/history_item_amount_label"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:singleLine="true"
                tools:text="3443.45 zÅ‚"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>