<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:id="@+id/table_odczyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_taryfa"
        android:layout_alignParentLeft="true"
        android:background="@drawable/border">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="40dp"
                android:text="Numer gazomierza: 00000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odczyt poprzedni:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="na dzień:" />

            <TextView
                android:id="@+id/textView_odczyt_poprzedni_na_dzien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="30dp"
                tools:text="01/01/2014" />

            <TextView
                android:id="@+id/textView_odczyt_poprzedni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="20dp"
                android:text="@string/odczyt_na_dzien"
                tools:text="249 [m\u00B3]"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingRight="10dp"
                android:text="Odczyt bieżący: Rzeczywisty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="na dzień:" />

            <TextView
                android:id="@+id/textView_odczyt_biezacy_na_dzien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="30dp"
                tools:text="31/12/2014" />

            <TextView
                android:id="@+id/textView_odczyt_biezacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="20dp"
                android:text="@string/odczyt_na_dzien"
                tools:text="290 [m\u00B3]"/>

            <TextView
                android:id="@+id/textView_zuzycie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="Zużycie: 50 [m\u00B3]" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_zuzycie_razem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_span="2"
                android:gravity="center"
                tools:text="Zużycie razem 50 [m\u00B3]" />

            <TextView
                android:id="@+id/textView_wsp_konwersji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:layout_gravity="center"
                tools:text="Wsp. konwersji: 11.204"/>

            <TextView
                android:id="@+id/textView_zuzycie_razem_kWh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:gravity="end"
                tools:text="Zużycie razem: 555 kWh" />
        </TableRow>
    </TableLayout>

</merge>