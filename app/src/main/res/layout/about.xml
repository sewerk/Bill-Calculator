<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/textView_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_padding"
            android:gravity="center"
            android:drawableLeft="@drawable/billcalc"
            android:contentDescription="Application logo and description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description"/>

        <TextView
            android:id="@+id/textView_emalme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_padding"
            android:layout_below="@id/textView_about"
            android:drawableRight="@drawable/emailme"
            android:text="@string/emailme"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView_klauzula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_emalme"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/double_padding"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/clause" />

        <TextView
            android:id="@+id/textView_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_below="@id/textView_klauzula"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/version_text"/>

        <Button
            android:id="@+id/b_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_ver"
            android:layout_marginTop="@dimen/small_padding"
            android:text="OK" />
    </RelativeLayout>
</ScrollView>