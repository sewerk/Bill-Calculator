<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_padding">

        <TextView
            android:id="@+id/tv_for_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/undeline"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="01/01/2014 - 31/12/2015"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_bill_type"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:layout_margin="@dimen/small_padding"
            android:src="@drawable/bill_type_pge"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Wskazania:"/>

            <TextView
                android:id="@+id/tv_readings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day 345 -456\nnight 567 - 789" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3443.45 zÅ‚"/>

    </LinearLayout>

</LinearLayout>