<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/form_entry">

    <TableRow
        android:id="@+id/readings_single"
        android:gravity="center">

        <com.wnafee.vector.MorphButton
            style="@style/FormReadingIcon"
            app:vc_startDrawable="@drawable/ic_history_black_24px" />

        <pl.srw.billcalculator.form.view.ReadingsEntryView
            android:id="@+id/reading_from_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorView="@+id/et_reading_from_error">

            <pl.srw.billcalculator.form.view.InstantAutoCompleteTextView
                android:id="@+id/et_reading_from"
                style="@style/FormReadingEntry"
                android:imeOptions="actionNext|flagNoExtractUi" />
        </pl.srw.billcalculator.form.view.ReadingsEntryView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:text="-"
            android:textSize="16sp" />

        <pl.srw.billcalculator.form.view.ReadingsEntryView
            android:id="@+id/reading_to_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:errorView="@+id/et_reading_to_error">

            <EditText
                android:id="@+id/et_reading_to"
                style="@style/FormReadingEntry"
                android:imeOptions="actionDone|flagNoExtractUi" />

        </pl.srw.billcalculator.form.view.ReadingsEntryView>
    </TableRow>

    <TableRow
        android:id="@+id/readings_single_errors">

        <TextView
            android:id="@+id/et_reading_from_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textAppearance="@style/TextAppearance.Design.Error"
            tools:text="@string/reading_missing" />

        <TextView
            android:id="@+id/et_reading_to_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.Design.Error"
            tools:text="@string/reading_order_error" />
    </TableRow>
</merge>