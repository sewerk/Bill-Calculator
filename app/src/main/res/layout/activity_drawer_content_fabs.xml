<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/activity_drawer_content">

    <View
        android:id="@+id/fabs_dim_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_overlay"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_tauron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/tauron"
        android:src="@drawable/tauron_small"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_pgnig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/pgnig"
        android:src="@drawable/pgnig_small"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_pge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/pge"
        android:src="@drawable/pge_small"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/primary"
        app:rippleColor="@color/primaryDark"
        app:srcCompat="@drawable/ic_add_white_24dp"/>
</merge>