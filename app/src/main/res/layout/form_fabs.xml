<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/form">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:backgroundTint="@color/primary"
        app:fabSize="mini"
        app:rippleColor="@color/primaryDark"
        app:srcCompat="@drawable/ic_close_white_24dp"/><!-- shadow broken on Samsung -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="8dp"
        app:backgroundTint="@color/primary"
        app:rippleColor="@color/primaryDark"
        app:srcCompat="@drawable/ic_arrow_forward_white_24dp"/><!-- margins not right on Samsung -->
</merge>