<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="item" type="pl.srw.billcalculator.settings.details.InputSettingsDetailsListItem" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/settings_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/settings_dialog_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@{item.summary}"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/settings_dialog_input_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@{item.measure}"
            tools:text="@string/price_measure_zl_kWh"/>

    </LinearLayout>
</layout>
