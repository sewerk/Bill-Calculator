<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="textColorError">@color/primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="AppTheme.Pge">
        <item name="colorPrimary">@color/pge</item>
        <item name="colorPrimaryDark">@color/pgeDark</item>
    </style>

    <style name="AppTheme.Pgnig">
        <item name="colorPrimary">@color/pgnig</item>
        <item name="colorPrimaryDark">@color/pgnigDark</item>
    </style>

    <style name="AppTheme.Tauron">
        <item name="colorPrimary">@color/tauron</item>
        <item name="colorPrimaryDark">@color/tauronDark</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="Title.expanded">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Title.collapsed">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FormHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@drawable/underline</item>
    </style>

    <!--<style name="FormDateInput" parent="Widget.AppCompat.Spinner.Underlined">-->
    <style name="FormDateInput" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FormReadingInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormReadingInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">9</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="FormEntryIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="FormDateIcon" parent="FormEntryIcon">
        <item name="android:visibility">gone</item>
    </style>

    <style name="FormEntryUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FormEntrySeparator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:text">-</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
