<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pl.srw.billcalculator">

    <application
        android:name=".BillCalculator"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".history.DrawerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".settings.activity.SettingsActivity"
            android:label="@string/settings_label">
        </activity>

        <activity android:name=".settings.activity.ProviderSettingsActivity">
        </activity>

        <activity android:name=".settings.help.ProviderSettingsHelpActivity"
                  android:label="@string/action_help"
                  android:theme="@style/DialogTheme" />

        <activity android:name=".AboutActivity"
                  android:label="@string/about_label"
                  android:theme="@style/DialogTheme" />

        <service android:name=".bill.service.PgnigBillStoringService" />

        <service android:name=".bill.service.PgeBillStoringService" />

        <service android:name=".bill.service.TauronBillStoringService" />

    </application>

</manifest>